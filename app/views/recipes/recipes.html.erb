<div class="container-header" >
	<nav class="navbar fixed-top navbar-light bg-light">
		<a class="navbar-brand-top">The Seasonal Chef</a>
	</nav>
</div>
<div class="flex-container-recipes-one">
	<% if @recipes.length == 0 %>
		<div id="col-two">No Possible Combination(s). Please Go Back & Select Again.</div>
	<% end %>
</div>
<div class="grids-one-recipes">
	<% @recipes.each do |recipe| %>
		<div class="flex-container-recipes-two mt-4 mb-5 row">
			<div class="col-sm-4 col-lg-6 recipe-image mt-2 mb-2"><%= image_tag recipe['thumbnail'], class: "flex-item-one-recipes" %></div>
		  <div class="col-sm-8 col-lg-6 recipe-name mt-2"><%= link_to recipe["title"], recipe['href'], target: "_blank", class: "flex-item-two-recipes responsive-image" %></div>
		</div>
			<% end %>
</div>
<div class="container-footer" >
 <nav class="navbar fixed-bottom navbar-light bg-light">
	 <a class="navbar-brand-bottom">All Rights Reserved</a>
 </nav>
</div>
