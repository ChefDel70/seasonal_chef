<div class="container-header" >
	<nav class="navbar fixed-top navbar-light bg-light">
		<a class="navbar-brand-top" href="/">The Seasonal Chef</a>
	</nav>
</div>
<div class="flex-container-recipes-one">
	<% if @recipes.length == 0 %>
		<div id="col-two">No Possible Combination(s).<br>Please Go Back & Select Again.</div>
	<% end %>
</div>
<div class="grids-one-recipes">
	<% @recipes.each do |recipe| %>
		<div class="flex-container-recipes-two mt-4 mb-4">
			<div class="col-sm-4 col-lg-6 recipe-image mt-2 mb-2"><%= image_tag recipe['thumbnail'], class: "flex-item-one-recipes", id: "gor" %></div>
		  <div class="col-sm-8 col-lg-6 recipe-name mt-2"><%= link_to recipe["title"], recipe['href'], target: "_blank", class: "flex-item-two-recipes responsive-image", id: "gortwo"  %></div>
		</div>
			<% end %>
</div>
<div class="back-button-recipes">
	<%= link_to 'Start Over', root_path, class: "btn btn-light btn-lg", id: "bbr"%>
</div>
<div class="container-footer" >
 <nav class="navbar fixed-bottom navbar-light bg-light">
	 <a class="navbar-brand-bottom">All Rights Reserved</a>
 </nav>
</div>
